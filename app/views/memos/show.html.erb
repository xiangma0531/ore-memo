<% if current_user.id == @memo.user.id %>
  <div>
    <p><%= link_to '編集', edit_memo_path, class: "btn btn-success" %></p>
    <p><%= link_to '削除', memo_path(@memo.id), method: :delete, data: {confirm: '削除します。よろしいですか？', cancel: 'キャンセル', commit: '削除する'}, title: '削除確認', class: "btn" %></p>
</div>
<% end %>
<table>
  <tr>
    <th>タイトル</th>
    <td><%= @memo.title %></td>
  </tr>
  <tr>
    <th>作成日時</th>
    <td><%= l @memo.created_at %></td>
  </tr>
  <tr>
    <th>メモ内容</th>
    <td><%= @memo.content %></td>
  </tr>
  <% if @message.image.atttached? %>
    <tr>
      <th>メモ画像</th>
      <td><%= image_tag @memo.image.variant(resize: '500x500') %></td>
    </tr>
  <% end %>
</table>