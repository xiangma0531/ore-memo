<%= form_with(model: @memo, local: true) do |f| %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, autofucus: true %>
  </div>

  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content, rows: "5" %>
  </div>

  <div class="actions">
    <%= f.submit "更新" %>
  </div>
<% end %>